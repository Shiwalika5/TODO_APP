<h1>CREATING NEW TODO</h1>

<%= form_with model: @todo, url: todos_path, method: :post, local: true do |f| %>
<% debugger %>

<div class="card">
  <div class="card-body">

    <div class="mb-3">
      <%= f.label :description, { class: "form-label"} %>
      <%= f.text_field :description, { class: "form-control", placeholder: "Description" } %>
    </div>
    <br/>
    <div class="mb-3">
      <%= f.label :due_date, { class: "form-label"} %>
      <%= f.text_field :due_date, { class: "form-control", placeholder: "Due_date" } %>
    </div>
     <br/>
    <div class="mb-3">
      <%= f.label :completed, { class: "form-label"} %>
      <%= f.text_field :completed, { class: "form-control", placeholder: "Completed" } %>
    </div>
    <br/>
    <%= f.submit "Submit", class: "btn btn-primary" %>

  </div>
</div>
<% end %>




